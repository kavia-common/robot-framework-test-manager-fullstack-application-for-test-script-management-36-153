# Application Configuration
APP_NAME=Robot Framework Test Manager API
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
# USER MUST PROVIDE: PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/testmanager

# JWT/Security Configuration
# USER MUST PROVIDE: Secret key for JWT token signing (generate a random string)
JWT_SECRET_KEY=your-secret-key-here-generate-a-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# MinIO/Object Storage Configuration
# USER MUST PROVIDE: MinIO endpoint, access key, and secret key
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=test-logs
MINIO_SECURE=False

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
