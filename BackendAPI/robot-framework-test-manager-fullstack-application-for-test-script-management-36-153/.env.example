# Global service ports (optional overrides)
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
MINIO_PORT_API=9000
MINIO_PORT_CONSOLE=9001

# PostgreSQL (Database)
POSTGRES_USER=rfuser
POSTGRES_PASSWORD=rfpassword
POSTGRES_DB=rfdb

# BackendAPI configuration
# SQLAlchemy URL; docker-compose will default to service name "db" as host
DATABASE_URL=postgresql+psycopg2://rfuser:rfpassword@db:5432/rfdb
JWT_SECRET=change-me-please
JWT_EXPIRES_IN=60
# CORS allowed origins (comma-separated)
CORS_ALLOW_ORIGINS=http://localhost:3000

# Minio (Object Storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=rf-test-manager

# Frontend configuration
REACT_APP_API_BASE=http://localhost:8000
